{{!< default}}
<div class="gh-page">
    <div class="gh-container">

        <!-- Carousel Slider -->
        <div class="carousel-container">
            <button class="carousel-button left">←</button>
            <div class="carousel-slide">
                {{#foreach posts limit="7"}}
                    <div class="carousel-item">
                        <a href="{{url}}">
                            <img src="{{feature_image}}" alt="{{title}}">
                            <div class="carousel-item-info">
                                <span>{{published_at format="DD MMM YYYY"}}</span>
                                <span>{{author.name}}</span>
                            </div>
                        </a>
                    </div>
                {{/foreach}}
            </div>
            <button class="carousel-button right">→</button>
        </div>

        <!-- Post Feed -->
        <div class="gh-postfeed">
            {{#foreach posts}}
                {{> "card" page=../pagination.page }} {{!-- partials/card.hbs --}}
            {{/foreach}}
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
