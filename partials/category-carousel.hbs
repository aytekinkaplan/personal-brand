<section class="category-carousel" data-category="{{category}}">
    <h2>{{category}}</h2>
    <div class="carousel-container">
        <button class="carousel-button prev" aria-label="Previous slide">←</button>
        <div class="carousel">
            {{#get "posts" filter="tag:{{tag}}" limit="5" include="tags,authors"}}
                {{#foreach posts}}
                    <div class="carousel-item">
                        {{> "post-card"}}
                    </div>
                {{/foreach}}
            {{/get}}
        </div>
        <button class="carousel-button next" aria-label="Next slide">→</button>
    </div>
</section>