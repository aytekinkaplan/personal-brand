<div class="gh-postfeed-slider">
    <button class="gh-slider-btn prev-btn" aria-label="Previous">&lt;</button>
    <div class="gh-slider-wrapper">
        <div class="gh-slider">
            {{#foreach posts limit="7"}}
                <div class="gh-slider-item">
                    <a href="{{url}}" class="gh-slider-link">
                        <div class="gh-card-image">
                            <img
                                src="{{feature_image}}"
                                alt="{{title}}"
                                class="gh-post-image"
                            />
                        </div>
                        <div class="gh-card-content">
                            <span
                                class="gh-card-meta"
                            >{{primary_tag.name}}</span>
                            <h2 class="gh-post-title">{{title}}</h2>
                            <p class="gh-post-date">Updated on
                                {{date format="MMM DD, YYYY"}}</p>
                        </div>
                    </a>
                </div>
            {{/foreach}}
        </div>
    </div>
    <button class="gh-slider-btn next-btn" aria-label="Next">&gt;</button>
</div>